<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SearchActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#FE9C2E"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/image_back"
            android:layout_margin="12dp"></ImageView>
        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="搜索商品/品类"
            android:textColorHint="#fff"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/scan"
            android:drawableLeft="@drawable/image_sousuo"
            android:background="#FE9C2E"
            android:layout_toRightOf="@+id/back"></EditText>

        <TextView
            android:id="@+id/scan"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:text="搜索"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"></TextView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除历史搜索记录"></Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>