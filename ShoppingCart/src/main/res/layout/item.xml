<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp">

    <CheckBox
        android:id="@+id/good_cb"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton" />

    <ImageView
        android:layout_width="60dp"
        android:id="@+id/good_img"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_toRightOf="@id/good_cb"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/good_title"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:layout_toRightOf="@id/good_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15156151651"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_below="@id/good_title"
        android:id="@+id/good_src"
        android:layout_toRightOf="@id/good_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15156151651"
        android:layout_marginLeft="15dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_small_size"/>

    <TextView
        android:layout_below="@id/good_src"
        android:id="@+id/good_price"
        android:layout_toRightOf="@id/good_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15156151651"
        android:layout_marginLeft="15dp"
        android:textColor="@color/red"
        android:textSize="@dimen/text_middle_size"/>

    <ren.qinc.numberbutton.NumberButton
        android:id="@+id/number_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:background="#E3DBDB"/>

</RelativeLayout>