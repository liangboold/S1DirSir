<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".IndentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FE9C2F"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="＜"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="订单确认"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="center"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择收货人"
            android:textStyle="bold"
            android:gravity="center"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="＞"
            android:textStyle="bold"
            android:textSize="24dp"
            android:gravity="right"
            android:paddingTop="@dimen/dp_10"
            ></TextView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/good_img"
            android:layout_height="60dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/good_title"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:layout_toRightOf="@id/good_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15156151651"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_below="@id/good_title"
            android:id="@+id/good_src"
            android:layout_toRightOf="@id/good_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15156151651"
            android:layout_marginLeft="15dp"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_small_size"/>

        <TextView
            android:layout_below="@id/good_src"
            android:id="@+id/good_price"
            android:layout_toRightOf="@id/good_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15156151651"
            android:layout_marginLeft="15dp"
            android:textColor="@color/red"
            android:textSize="@dimen/text_middle_size"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:background="#E3DBDB"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="支付配送"
            android:textSize="24dp"
            android:gravity="center"
            ></TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="在线支付"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:gravity="center"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="快递运输"
                android:textSize="24dp"
                android:gravity="center"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="合计:300.00"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:textSize="24dp"></TextView>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:text="提交订单"
            android:id="@+id/btn_shop"
            android:textColor="@color/white"
            android:textStyle="bold"
            ></Button>
    </LinearLayout>
</LinearLayout>